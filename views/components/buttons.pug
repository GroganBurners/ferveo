mixin a-btn(url,style, size)
  - var type = (typeof style === 'undefined') ? "primary" : style
  unless size
    a.btn(class="btn-" + type,href=url,role="button")
      block
  else
    a.btn(class="btn-" + type + " btn-" + size, href=url, role="button")
      block

mixin a-btn-secondary(url)
  +a-btn(url,"secondary")
    block
  
mixin a-btn-info(url)
  +a-btn(url,"info")
    block

mixin a-btn-warning(url)
  +a-btn(url,"warning")
    block
  
mixin a-btn-danger(url)
  +a-btn(url,"danger")
    block

mixin a-btn-success(url)
  +a-btn(url,"success")
    block

// large a buttons
mixin a-btn-lg(url)
  +a-btn(url,'primary',"lg")
    block

mixin a-btn-lg-secondary(url)
  +a-btn(url,"secondary","lg")
    block
  
mixin a-btn-lg-info(url)
  +a-btn(url,"info","lg")
    block

mixin a-btn-lg-warning(url)
  +a-btn(url,"warning","lg")
    block
  
mixin a-btn-lg-danger(url)
  +a-btn(url,"danger","lg")
    block

mixin a-btn-lg-success(url)
  +a-btn(url,"success","lg")
    block

// normal buttons
mixin btn(caption,style,size)
  - var type = (typeof style === 'undefined') ? "primary" : style
  unless size
    button.btn(class="btn-" + type,type="button")= caption
  else
    button.btn(class="btn-" + type + " btn-" + size,type="button")= caption


mixin btn-secondary(caption)
  +btn(caption,"secondary")

mixin btn-info(caption)
  +btn(caption,"info")

mixin btn-warning(caption)
  +btn(caption,"warning")

mixin btn-danger(caption)
  +btn(caption,"danger")

mixin btn-success(caption)
  +btn(caption,"success")


//- Large buttons	
