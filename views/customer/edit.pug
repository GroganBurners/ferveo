include ../components/modals
append body
  +modal(title,'edit')
    h1.
      Customer Edit
    form(action='/customers/edit',method='post',name='updatecustomer',enctype='application/x-www-form-urlencoded')
      p ID:
        input#inputName(type='text', name='id')
      p Name:
        input#inputName(type='text', name='name')
      p Date Created: 
        input#inputCreatedOn(type="date", name="createdOn")
      p Date Updated: 
        input#inputUpdatedOn(type="date", name="updatedOn", disabled)
      p
        input(type='hidden',value='PUT',name='_method')
        button#btnSubmit(type='submit') Update